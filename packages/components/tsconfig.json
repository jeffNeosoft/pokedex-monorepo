{
  "compilerOptions": {
    "skipLibCheck": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "rootDir": "src"
  },
  "exclude": ["node_modules", "./setupTests.ts"]
}